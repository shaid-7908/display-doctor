<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/caller.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('./layout/sidebar', { currentPage: 'issues' }) %>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">
                            <i class="fas fa-tv me-2 text-primary"></i>TV Issues
                        </h1>
                        <div class="btn-toolbar mb-2 mb-md-0">
                            <div class="btn-group me-2">
                                <a href="/caller/customers" class="btn btn-outline-primary">
                                    <i class="fas fa-users me-1"></i>View Customers
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Search and Filter Section -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control search-box" id="searchInput"
                                    placeholder="Search issues by code, name, customer, customer code, or status...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="open">Open</option>
                                <option value="in_progress">In Progress</option>
                                <option value="resolved">Resolved</option>
                                <option value="closed">Closed</option>
                            </select>
                        </div>
                    </div>

                    <!-- Issues Table -->
                    <div class="card form-card">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2 text-primary"></i>All TV Issues
                                <span class="badge bg-primary ms-2">
                                    <%= pagination.totalIssues %>
                                </span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <% if (issues.length===0) { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-tv fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No TV Issues Found</h5>
                                    <p class="text-muted">You haven't created any TV issues yet.</p>
                                    <a href="/caller/customers" class="btn btn-primary">
                                        <i class="fas fa-user-plus me-1"></i>Create Customer First
                                    </a>
                                </div>
                                <% } else { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>
                                                        <i class="fas fa-hashtag me-1"></i>Code
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-hashtag me-1"></i>Issue
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-user me-1"></i>Customer
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-tv me-1"></i>TV Details
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-info-circle me-1"></i>Status
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-calendar me-1"></i>Created
                                                    </th>
                                                    <th>
                                                        <i class="fas fa-cogs me-1"></i>Actions
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% issues.forEach(issue=> { %>
                                                    <tr>
                                                        <td>
                                                            <span class="badge bg-secondary">
                                                                <i class="fas fa-tag me-1"></i>
                                                                <%= issue.issue_code %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <strong class="text-primary">
                                                                    <%= issue.issue_name %>
                                                                </strong>
                                                                <br>
                                                                <small class="text-muted">
                                                                    <%= issue.issue_description.length> 50 ?
                                                                        issue.issue_description.substring(0, 50) + '...'
                                                                        :
                                                                        issue.issue_description %>
                                                                </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <strong>
                                                                    <%= issue.customer_id.customer_name %>
                                                                </strong>
                                                                <br>
                                                                <small class="text-muted">
                                                                    <span class="badge bg-secondary me-1">
                                                                        <i class="fas fa-tag me-1"></i>
                                                                        <%= issue.customer_id.customer_code %>
                                                                    </span>
                                                                    <% if (issue.customer_id.customer_email) { %>
                                                                        <br><i class="fas fa-envelope me-1"></i>
                                                                        <%= issue.customer_id.customer_email %>
                                                                            <% } %>
                                                                                <% if (issue.customer_id.customer_phone)
                                                                                    { %>
                                                                                    <br><i
                                                                                        class="fas fa-phone me-1"></i>
                                                                                    <%= issue.customer_id.customer_phone
                                                                                        %>
                                                                                        <% } %>
                                                                                            <br><i
                                                                                                class="fas fa-map-marker-alt me-1"></i>
                                                                                            <%= issue.customer_id.customer_city
                                                                                                %>, <%=
                                                                                                    issue.customer_id.customer_state
                                                                                                    %>
                                                                </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <% if (issue.tv_model) { %>
                                                                    <strong>
                                                                        <%= issue.tv_model %>
                                                                    </strong><br>
                                                                    <% } %>
                                                                        <% if (issue.tv_serial_number) { %>
                                                                            <small class="text-muted">
                                                                                <i class="fas fa-barcode me-1"></i>S/N:
                                                                                <%= issue.tv_serial_number %>
                                                                            </small><br>
                                                                            <% } %>
                                                                                <% if (issue.tv_size) { %>
                                                                                    <small class="text-muted">
                                                                                        <i
                                                                                            class="fas fa-expand me-1"></i>
                                                                                        <%= issue.tv_size %>"
                                                                                    </small>
                                                                                    <% } %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-<%= 
                                                    issue.issue_status === 'open' ? 'danger' :
                                                    issue.issue_status === 'in_progress' ? 'warning' :
                                                    issue.issue_status === 'resolved' ? 'success' :
                                                    issue.issue_status === 'closed' ? 'secondary' : 'primary'
                                                %>">
                                                                <i class="fas fa-<%= 
                                                        issue.issue_status === 'open' ? 'exclamation-circle' :
                                                        issue.issue_status === 'in_progress' ? 'clock' :
                                                        issue.issue_status === 'resolved' ? 'check-circle' :
                                                        issue.issue_status === 'closed' ? 'times-circle' : 'info-circle'
                                                    %> me-1"></i>
                                                                <%= issue.issue_status.charAt(0).toUpperCase() +
                                                                    issue.issue_status.slice(1).replace('_', ' ' ) %>
                                                            </span>
                                                            <span class="badge bg-<%= 
                                                     issue.forward_status === 'sent' ? 'success' :
                                                     issue.forward_status === 'not_sent' ? 'warning' : 'warning'
                                                 %>">
                                                                <%= issue.forward_status.charAt(0).toUpperCase() +
                                                                    issue.forward_status.slice(1).replace('_', ' ' ) %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <small class="text-muted">
                                                                    <i class="fas fa-calendar me-1"></i>
                                                                    <%= new Date(issue.created_at).toLocaleDateString()
                                                                        %>
                                                                </small>
                                                                <br>
                                                                <small class="text-muted">
                                                                    <i class="fas fa-clock me-1"></i>
                                                                    <%= new Date(issue.created_at).toLocaleTimeString()
                                                                        %>
                                                                </small>
                                                                <% if (issue.visit_date) { %>
                                                                    <br>
                                                                    <small class="text-success">
                                                                        <i class="fas fa-calendar-check me-1"></i>
                                                                        Visit: <%= new
                                                                            Date(issue.visit_date).toLocaleDateString()
                                                                            %>
                                                                            <% if (issue.visit_time_range) { %>
                                                                                <br><i class="fas fa-clock me-1"></i>
                                                                                <%= issue.visit_time_range %>
                                                                                    <% } %>
                                                                    </small>
                                                                    <% } %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group" role="group">
                                                                <button type="button"
                                                                    class="btn btn-sm btn-outline-primary"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#issueModal<%= issue._id %>">
                                                                    <i class="fas fa-eye"></i>
                                                                </button>
                                                                <a href="/caller/edit-issue/<%= issue._id %>"
                                                                    class="btn btn-sm btn-outline-warning">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                                <a class="btn btn-sm btn-outline-info"
                                                                    href="/caller/send-mail/<%= issue._id %>">
                                                                    <i class="fas fa-mail-bulk"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                    <!-- Issue Details Modal -->
                                                    <div class="modal fade" id="issueModal<%= issue._id %>"
                                                        tabindex="-1">
                                                        <div class="modal-dialog modal-lg">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">
                                                                        <i class="fas fa-tv me-2 text-primary"></i>
                                                                        <%= issue.issue_name %>
                                                                    </h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <h6 class="text-primary">Issue Details</h6>
                                                                            <p><strong>Code:</strong>
                                                                                <span class="badge bg-secondary">
                                                                                    <i class="fas fa-tag me-1"></i>
                                                                                    <%= issue.issue_code %>
                                                                                </span>
                                                                            </p>
                                                                            <p><strong>Description:</strong></p>
                                                                            <p class="text-muted">
                                                                                <%= issue.issue_description %>
                                                                            </p>

                                                                            <% if (issue.issue_notes) { %>
                                                                                <p><strong>Notes:</strong></p>
                                                                                <p class="text-muted">
                                                                                    <%= issue.issue_notes %>
                                                                                </p>
                                                                                <% } %>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <h6 class="text-primary">Customer
                                                                                Information</h6>
                                                                            <p><strong>Code:</strong>
                                                                                <span class="badge bg-secondary">
                                                                                    <i class="fas fa-tag me-1"></i>
                                                                                    <%= issue.customer_id.customer_code
                                                                                        %>
                                                                                </span>
                                                                            </p>
                                                                            <p><strong>Name:</strong>
                                                                                <%= issue.customer_id.customer_name %>
                                                                            </p>
                                                                            <% if (issue.customer_id.customer_email) {
                                                                                %>
                                                                                <p><strong>Email:</strong>
                                                                                    <%= issue.customer_id.customer_email
                                                                                        %>
                                                                                </p>
                                                                                <% } %>
                                                                                    <% if
                                                                                        (issue.customer_id.customer_phone)
                                                                                        { %>
                                                                                        <p><strong>Phone:</strong>
                                                                                            <%= issue.customer_id.customer_phone
                                                                                                %>
                                                                                        </p>
                                                                                        <% } %>
                                                                                            <p><strong>Location:</strong>
                                                                                                <%= issue.customer_id.customer_city
                                                                                                    %>, <%=
                                                                                                        issue.customer_id.customer_state
                                                                                                        %>
                                                                                            </p>
                                                                        </div>
                                                                    </div>

                                                                    <% if (issue.tv_model || issue.tv_serial_number ||
                                                                        issue.tv_size) { %>
                                                                        <hr>
                                                                        <h6 class="text-primary">TV Information</h6>
                                                                        <div class="row">
                                                                            <% if (issue.tv_model) { %>
                                                                                <div class="col-md-4">
                                                                                    <p><strong>Model:</strong>
                                                                                        <%= issue.tv_model %>
                                                                                    </p>
                                                                                </div>
                                                                                <% } %>
                                                                                    <% if (issue.tv_serial_number) { %>
                                                                                        <div class="col-md-4">
                                                                                            <p><strong>Serial
                                                                                                    Number:</strong>
                                                                                                <%= issue.tv_serial_number
                                                                                                    %>
                                                                                            </p>
                                                                                        </div>
                                                                                        <% } %>
                                                                                            <% if (issue.tv_size) { %>
                                                                                                <div class="col-md-4">
                                                                                                    <p><strong>Size:</strong>
                                                                                                        <%= issue.tv_size
                                                                                                            %>"
                                                                                                    </p>
                                                                                                </div>
                                                                                                <% } %>
                                                                        </div>
                                                                        <% } %>

                                                                            <% if (issue.visit_date) { %>
                                                                                <hr>
                                                                                <h6 class="text-primary">Visit
                                                                                    Information</h6>
                                                                                <div class="row">
                                                                                    <div class="col-md-6">
                                                                                        <p><strong>Visit Date:</strong>
                                                                                            <%= new
                                                                                                Date(issue.visit_date).toLocaleDateString()
                                                                                                %>
                                                                                        </p>
                                                                                    </div>
                                                                                    <% if (issue.visit_time_range) { %>
                                                                                        <div class="col-md-6">
                                                                                            <p><strong>Time
                                                                                                    Range:</strong>
                                                                                                <%= issue.visit_time_range
                                                                                                    %>
                                                                                            </p>
                                                                                        </div>
                                                                                        <% } %>
                                                                                </div>
                                                                                <% } %>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Close</button>
                                                                    <a href="/caller/edit-issue/<%= issue._id %>"
                                                                        class="btn btn-primary">
                                                                        <i class="fas fa-edit me-1"></i>Edit Issue
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } %>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination.totalPages> 1) { %>
                        <nav aria-label="Issues pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (pagination.hasPrev) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/caller/issues?page=<%= pagination.page - 1 %>">
                                            <i class="fas fa-chevron-left"></i> Previous
                                        </a>
                                    </li>
                                    <% } %>

                                        <% for (let i=1; i <=pagination.totalPages; i++) { %>
                                            <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                                <a class="page-link" href="/caller/issues?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>

                                                <% if (pagination.hasNext) { %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="/caller/issues?page=<%= pagination.page + 1 %>">
                                                            Next <i class="fas fa-chevron-right"></i>
                                                        </a>
                                                    </li>
                                                    <% } %>
                            </ul>
                        </nav>
                        <% } %>
                </main>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const tableRows = document.querySelectorAll('tbody tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusTerm = statusFilter.value.toLowerCase();

                tableRows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const statusCell = row.querySelector('td:nth-child(4)');
                    const status = statusCell ? statusCell.textContent.toLowerCase() : '';

                    const matchesSearch = text.includes(searchTerm);
                    const matchesStatus = !statusTerm || status.includes(statusTerm);

                    row.style.display = matchesSearch && matchesStatus ? '' : 'none';
                });
            }

            searchInput.addEventListener('input', filterTable);
            statusFilter.addEventListener('change', filterTable);
        });
    </script>
</body>

</html>